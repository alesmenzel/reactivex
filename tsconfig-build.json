{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    // Allow JS
    "allowJs": true,
    "checkJs": true,
    "noEmitOnError": true,
    // Modules
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    // Strickness
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    // Declaration d.ts file
    "declaration": true,
    "declarationDir": "types",
    // Library and types
    "lib": [
      "DOM",
      "ESNext",
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts",
    "./coverage/",
    "./dist/",
  ],
}
